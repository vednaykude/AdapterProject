<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E7EDAE"
    android:descendantFocusability="blocksDescendants"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/list"
        android:layout_width="265dp"
        android:layout_height="207dp"
        android:background="#A5D179"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491" />

    <TextView
        android:id="@+id/LtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="Pokemon Data:"
        android:textColor="#1E4491"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintEnd_toEndOf="@+id/list"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

    <TextView
        android:id="@+id/LtextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="75dp"
        android:text="Pokemon Image:"
        android:textColor="#1E4491"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/LtextView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintEnd_toEndOf="@+id/LtextView2"
        app:layout_constraintStart_toStartOf="@+id/LtextView2"
        app:layout_constraintTop_toBottomOf="@+id/LtextView2"
        app:srcCompat="@drawable/pokeball" />

    <TextView
        android:id="@+id/LtextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Specifications:"
        android:textColor="#1E4491"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="256dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@+id/LtextView3"
        app:layout_constraintStart_toStartOf="@+id/LtextView3"
        app:layout_constraintTop_toBottomOf="@+id/LtextView3"
        app:srcCompat="@drawable/pokemonlogo" />

</androidx.constraintlayout.widget.ConstraintLayout>